{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "POST /api/topics": {
    "description": "Posts a topic",
    "body" : { "slug": "name", "description": "text"},
    "exampleResponse": {
      "topic": [
        {
          "slug": "name",
          "description": "text"
        }
      ]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order", "p", "limit"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "POST /api/articles": {
    "description": "Posts an article",
    "body" : { "author": "name", "title": "title", "body": "text", "topic": "topic" },
    "exampleResponse": {
      "article": [
        {
          "author": "rogersop",
          "title": "Nice article",
          "article_id": "14",
          "body": "This is a nice article about cats",
          "topic": "cats",
          "created_at": "2024-04-18T16:22:12.432Z",
          "votes": "0",
          "article_img_url": "default",
          "comment_count": 0
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article with the desired ID",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "author": "butter_bridge",
          "title": "Living in the shadow of a great man",
          "article_id": "1",
          "body": "I find this existence challenging",
          "topic": "mitch",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": "100",
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": "11"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates an article votes key and returns the updated article",
    "queries": [],
    "exampleResponse": {
      "article": [
        {
          "author": "butter_bridge",
          "title": "Living in the shadow of a great man",
          "article_id": "1",
          "body": "I find this existence challenging",
          "topic": "mitch",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": "101",
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments from the desired article",
    "queries": ["p", "limit"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": "6",
          "votes": "0",
          "created_at": "2020-04-11T21:02:00.000Z",
          "author": "icellusedkars",
          "body":"I hate streaming eyes even more",
          "article_id": "1"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a comment to the desired article within the database and returns posted article",
    "queries": [],
    "exampleResponse": {
      "comment": [
        {
          "comment_id": "19",
          "votes": "0",
          "created_at": "2020-04-11T21:02:00.000Z",
          "author": "icellusedkars",
          "body":"This is interesting",
          "article_id": "1"
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment with the provided ID. Returns nothing",
    "queries": []
  },
  "PATCH /api/comments/:comment_id": {
    "description": "Updates votes value on a comment",
    "queries": [],
    "body": { "inc_votes" : "1" },
    "exampleResponse": {
      "comment": [
        {
          "comment_id": "19",
          "votes": "1",
          "created_at": "2020-04-11T21:02:00.000Z",
          "author": "icellusedkars",
          "body":"This is interesting",
          "article_id": "1"
        }
      ]
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "comment": [
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https//www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      ]
    }
  },
  "GET /api/users/:username": {
    "description": "serves a user",
    "queries": [],
    "exampleResponse": {
      "comment": [
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https//www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      ]
    }
  }
}
